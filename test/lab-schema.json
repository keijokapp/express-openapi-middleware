{
	"type": "object",
	"properties": {
		"_id": {"type": "string", "pattern": "^[a-zA-Z0-9-]+$"},
		"_rev": {"type": "string"},
		"machines": {
			"type": "object",
			"minItems": 1,
			"additionalProperties": {
				"type": "object",
				"oneOf": [{
					"properties": {
						"type": {"type": "string", "enum": ["virtualbox"]}
					},
					"required": ["type"]
				}, {
					"properties": {
						"type": {"type": "string", "enum": ["lxd"]},
						"repositories": {
							"type": "array"
						}
					},
					"required": ["type"]
				}]
			}
		},
		"endpoints": {
			"type": "array",
			"uniqueItems": true,
			"items": {"type": "string", "minLength": 1}
		}
	}
}
